{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "models": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "info": {
            "type": "object",
            "properties": {
              "url":   {"type": "string"},
              "urls":  {"type": "array", "items": {"type": "string"}, "minItems": 1},
              "sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"}
            },
            "required": ["sha256"],
            "anyOf": [
              {"required": ["url"]},
              {"required": ["urls"]}
            ],
            "additionalProperties": true
          }
        },
        "required": ["info"],
        "additionalProperties": true
      }
    }
  },
  "required": ["models"],
  "additionalProperties": true
}
